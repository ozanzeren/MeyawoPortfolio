@model List<MeyawoPortfolio.Models.TblFuture>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Öne Çıkanlar</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Header</th>
        <th>Ad Soyad</th>
        <th>Başlık</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.FutureID</th>
            <th>@item.Header</th>
            <th>@item.NameSurname</th>
            <th>@item.Title'</th>
            <td><a href="/Future/UpdateFuture/@item.FutureID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
